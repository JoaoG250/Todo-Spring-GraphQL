type Query {
  todo(id: ID!): Todo!
  todos: [Todo!]!
}

type Todo {
  description: String!
  done: Boolean!
  id: ID!
  title: String!
}

type Mutation {
  saveTodo(id: ID, data: TodoInput!): Todo!
  deleteTodo(id: ID!): Boolean!
}

input TodoInput {
  title: String!
  description: String!
  done: Boolean!
}
